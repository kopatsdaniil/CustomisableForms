@model CustomisableForms.Models.Form

@{
    ViewData["Title"] = "Edit";
}

<body>
<div class="container mt-5">
    <h1> Edit </h1>
    <hr />

    <form asp-controller="Forms" asp-action="Edit" method="post" asp-validation-summary="ModelOnly" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image_url" class="control-label"></label>
                <input type="file" name="ImageFile" class="form-control" />
                <span asp-validation-for="Image_url" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_string1_question" class="control-label"></label>
                <input asp-for="Custom_string1_question" class="form-control" />
                <span asp-validation-for="Custom_string1_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_string2_question" class="control-label"></label>
                <input asp-for="Custom_string2_question" class="form-control" />
                <span asp-validation-for="Custom_string2_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_string3_question" class="control-label"></label>
                <input asp-for="Custom_string3_question" class="form-control" />
                <span asp-validation-for="Custom_string3_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_string4_question" class="control-label"></label>
                <input asp-for="Custom_string4_question" class="form-control" />
                <span asp-validation-for="Custom_string4_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_int1_question" class="control-label"></label>
                <input asp-for="Custom_int1_question" class="form-control" />
                <span asp-validation-for="Custom_int1_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_int2_question" class="control-label"></label>
                <input asp-for="Custom_int2_question" class="form-control" />
                <span asp-validation-for="Custom_int2_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_int3_question" class="control-label"></label>
                <input asp-for="Custom_int3_question" class="form-control" />
                <span asp-validation-for="Custom_int3_question" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custom_int4_question" class="control-label"></label>
                <input asp-for="Custom_int4_question" class="form-control" />
                <span asp-validation-for="Custom_int4_question" class="text-danger"></span>
            </div>
        </div>

        <div class="form-center">
            <input style="margin-top: 16px" type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 800px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        margin-bottom: 20px;
    }

    .form-group input.form-control {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-group input.form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }
</style>
</body>